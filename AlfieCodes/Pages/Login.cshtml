@page
@model AlfieCodes.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="col-sm-6 offset-sm-3 text-center">
    <br />
    <h1>Login</h1>
    <br /><br />
    <form class="justify-content-center" method="post">
        <div class="form-group">
            <label>
                Email
                <input asp-for="LoginRequest.Email" aria-describedby="emailHelp" class="form-control" placeholder="Email" type="email" />
            </label>
        </div>
        <div class="form-group">
            <label>
                Password
                <input asp-for="LoginRequest.Password" aria-describedby="passwordHelp" class="form-control" placeholder="Password" type="password" />
            </label>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</div>
