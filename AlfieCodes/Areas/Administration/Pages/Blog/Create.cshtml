@page
@model AlfieCodes.Areas.Administration.Pages.Blog.CreateBlogPostModel
@{
    ViewData["Title"] = "Create Blog Post";
    Layout = "Shared/_AdminLayout";
}

@* make tags separated by spaces *@

    <form method="post" style="text-align: center;">
        <div class="form-group">
            <label>
                Title
                <input asp-for="BlogPost.Title" type="text" class="form-control cbp" aria-describedby="titleHelp" placeholder="Title" />
            </label>
            <small id="titleHelp" class="form-text text-muted">Title of the blog post</small>
        </div>
        <div class="form-group">
            <label>
                Body
                <textarea asp-for="BlogPost.Body" type="text" class="form-control cbp" aria-describedby="bodyHelp" placeholder="Body"></textarea>
            </label>
            <small id="bodyHelp" class="form-text text-muted">Body of the blog post</small>
        </div>
        <div class="form-group">
            <label>
                Tags
                <input asp-for="Tags.Value" type="text" class="form-control cbp" aria-describedby="tagHelp" placeholder="Tags" />
            </label>
            <small id="tagsHelp" class="form-text text-muted">Tags of the blog post</small>
        </div>
        <div class="form-group">
            <label>
                Time to Read
                <input asp-for="BlogPost.ReadTime" type="text" class="form-control cbp" aria-describedby="readtimeHelp" placeholder="Time to read" />
            </label>
            <small id="readTimeHelp" class="form-text text-muted">How long it'll take to read.</small>
        </div>
        <div class="form-group">
            <label>
                Image Link
                <input asp-for="BlogPost.Image" type="text" class="form-control cbp" aria-describedby="readtimeHelp" placeholder="Time to read" />
            </label>
            <small id="imageHelp" class="form-text text-muted">Link to an image you wish to use for the blog.</small>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
